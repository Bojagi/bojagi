{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "es6",
      "es2016",
      "es2017"
    ],
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "references": [
    {
      "path": "packages/cli"
    }
  ]
}