{
  "name": "root",
  "private": true,
  "scripts": {
    "test": "jest",
    "build": "rollup -c",
    "deploy": "lerna publish from-git -y",
    "publish": "./bin/publish.sh"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "24.0.11",
    "jest": "24.7.1",
    "lerna": "3.13.1",
    "rollup": "^1.10.1",
    "rollup-plugin-babel": "^4.3.2",
    "ts-jest": "24.0.2",
    "typescript": "3.4.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "transform": {
      ".(ts|tsx|js)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node"
  }
}
